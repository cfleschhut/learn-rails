<%# Rails flash messages styled for Zurb Foundation %>
<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="small-12 columns">
      <div data-alert class="alert-box radius <%= name == :notice ? "success" : "alert" %>">
        <%= content_tag :div, msg %>
        <a href="#" class="close">&times;</a>
      </div>
    </div>
  <% end %>
<% end %>
